= content header
  {{ partial "subnav" . }}
= content main
  #post.xl:px-12.w-full.max-w-4xl.mx-auto.lg:ml-0.lg:mr-auto.xl:mx-0
    {{.Content}}
    {{partial "author" . }}
    {{ if .Page.Params.tweet }}
      {{ partial "tweet" . }}
    {{ end  }}
    .rm-after-resource-article
    {{partial "related" . }}
= content modal
  .modal
    {{ if .Page.Params.modal }}
      {{ partial (.Page.Param "modal.template") . }}
    {{ end }}
