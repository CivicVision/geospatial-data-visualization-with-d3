= content header
  {{ partial "subnav" . }}
= content main
  .container.m-auto.px-8.md:px-4.lg:p-0 class="md:flex-row max-w-xl"
    {{.Content}}
    {{ if .Page.Params.tweet }}
      {{ partial "tweet" . }}
    {{ end  }}
    .rm-after-resource-article
    {{partial "related" . }}
= content modal
  .modal
    {{ if .Page.Params.modal }}
      {{ partial (.Page.Param "modal.template") . }}
    {{ end }}
